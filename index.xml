---
layout: none
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>The Writings of Chuck Bergeron</title>
    <link href="{{site.url}}/index.xml" rel="self"/>
    <link href="{{site.url}}"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{site.url}}</id>
    <author>
        <name>Chuck Bergeron</name>
        <email>chuck@chuckbergeron.io</email>
    </author>

    {% for post in site.posts %}
      {% unless post.draft or post.podcast %}
        <entry>
            <title>{{ post.title }}</title>
            <author>
              <name>Chuck Bergeron</name>
              <email>chuck@chuckbergeron.io</email>
            </author>
            <link href="{{ site.url }}{{ post.url }}"/>
            <updated>{{ post.date | date_to_xmlschema }}</updated>
            <id>{{ site.url }}{{ post.id }}</id>
            <content type="html">{{ post.content | xml_escape }}</content>

            {% if post.shared_square_image %}
              <content type="image" src="{{ post.shared_square_image }}" />
            {% else %}
              <content type="image" src="{{site.url}}/{% asset_path chuck-bergeron--profile.jpg %}" />
            {% endif %}
        </entry>
      {% endunless %}
    {% endfor %}
</feed>
